{
    "manifest_version": 3,
    "name": "GFG playnext",
    "version": "1.0",
    "description": "Automatically plays the next video on a GFG website.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "background": {
        "scripts": ["background.js"],
        "service_worker": "background.js"
    },
    "browser_action": {
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "GFGAutoplayNextVideoExtensionByHiPHEN@MAX-786"
        }
    }
}