{
    "manifest_version": 3,
    "name": "GFG playnext",
    "version": "1.0",
    "description": "Automatically plays the next video on a GFG website.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "GFGAutoplayNextVideoExtensionByHiPHEN@MAX-786"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.geeksforgeeks.org/*"
            ],
            "js": [
                "script.js"
            ]
        }
    ]
}